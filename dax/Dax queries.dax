_InvestimentReturn = 
    EXP(
        CALCULATE(
            SUMX(
                'Table', 
                LN(
                    IF(
                        'Table'[Index] = 1,
                        100 * 'Table'[Rate] + 100,
                        1 + 'Table'[Rate]
                        )
                    )
            ), 
            FILTER(
                ALL('Table'[Date]),
                [Date] <= MAX([Date]))))
VAR __Year_Max = MAX('Table Rainfall'[Year])
VAR __Year = 'Table Rainfall'[Year]
RETURN
CALCULATE(
    SUM('Table Rainfall'[Rainfall])
    FILTER(
                ALL('Table'[Date]),
                'Table Rainfall'[Year] <= __Year_Max
                &&
                'Table Rainfall'[Year] < __Year - 1)